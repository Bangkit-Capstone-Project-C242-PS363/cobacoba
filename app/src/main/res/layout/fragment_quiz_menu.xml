<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.quiz.quiz_menu_fragment.QuizMenuFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:backgroundTint="@color/yellow"
        android:src="@drawable/baseline_arrow_back_24"
        app:tint="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btnStartQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/quiz_button_background"
        android:text="@string/lets_quiz"
        android:textColor="@color/dark_blue"
        android:textSize="24sp"
        android:elevation="10dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btnLearn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/dark_blue"
        android:background="@drawable/quiz_button_background"
        android:text="@string/learn_first"
        android:textSize="24sp"
        android:elevation="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/btnStartQuiz" />

</RelativeLayout>
